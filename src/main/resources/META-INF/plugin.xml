<idea-plugin>
    <id>org.netkuz.systemLoadMonitor</id>
    <name>System Load Monitor</name>
    <version>0.0.1</version>
    <vendor email="skuznetsov99@gmail.com" url="https://github.com/netkuz/SystemLoadMonitor">Sergey Kuznetsov</vendor>

    <description><![CDATA[
          System load monitor for intellij based IDEs
          <em>intellij idea extension used to monitor java system resources</em>
  ]]></description>

    <!--<change-notes><![CDATA[
        Add change notes here.<br>
        <em>most HTML tags may be used</em>
      ]]>
    </change-notes>-->

    <idea-version since-build="173.0"/>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="System Load Monitor" secondary="true" icon="/systemLoadMonitor/logo.png" anchor="right"
                    factoryClass="org.netkuz.systemLoadMonitor.SystemLoadMonitorWindowFactory"/>
    </extensions>

</idea-plugin>